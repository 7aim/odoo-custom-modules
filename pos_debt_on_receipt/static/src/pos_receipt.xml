<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_debt_on_receipt.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="after">
            
            <t t-if="receipt.partner and receipt.customer_old_due and Math.abs(receipt.customer_old_due) > 0.01">
                <div class="pos-receipt-left-align" style="margin-top: 5px; font-weight: bold;">
                    <span>Köhnə Borc:</span>
                    <span class="pos-receipt-right-align">
                        <t t-esc="env.pos.format_currency(receipt.customer_old_due)"/>
                    </span>
                </div>
            </t>

        </xpath>
    </t>

</templates>